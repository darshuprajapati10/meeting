# Production Environment Configuration for Yujix API
# Copy this file to /var/www/yujix/.env on the server
# Replace all placeholder values with actual production values

APP_NAME=Yujix
APP_ENV=production
APP_KEY=  # Will be generated with: php artisan key:generate
APP_DEBUG=false
APP_URL=https://yujix.com
APP_LOCALE=en
APP_TIMEZONE=Asia/Kolkata

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# Database Configuration
# Use credentials from setup-server.sh
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=yujix_production
DB_USERNAME=yujix_user
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE

# Queue Configuration
# Using database driver for queue jobs
QUEUE_CONNECTION=database

# Cache Configuration
# Using Redis for better performance
CACHE_STORE=redis
CACHE_PREFIX=yujix_cache

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Mail Configuration
# Configure your mail provider (Gmail, SendGrid, SES, etc.)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# Firebase Cloud Messaging
# For push notifications
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CREDENTIALS_PATH=storage/app/firebase/service-account.json
# Alternative: Use JSON string
# FIREBASE_CREDENTIALS_JSON='{"type":"service_account",...}'

# Razorpay Payment Gateway
# IMPORTANT: Use LIVE keys in production, not test keys
RAZORPAY_KEY=rzp_live_YOUR_LIVE_KEY_HERE
RAZORPAY_SECRET=your_live_secret_here
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# Google OAuth (if used)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yujix.com/auth/google/callback

# AWS Configuration (if using S3 or SES)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# Broadcasting (if needed)
BROADCAST_DRIVER=log
BROADCAST_CONNECTION=log

# Application Maintenance
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Additional Security
# Generate strong random strings for these
SANCTUM_STATEFUL_DOMAINS=yujix.com,www.yujix.com
SESSION_SECURE_COOKIE=true
